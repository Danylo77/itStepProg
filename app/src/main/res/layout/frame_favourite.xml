<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/teachers_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favourite"
        android:layout_gravity="center"
        android:textSize="32sp"
        android:layout_margin="10dp"
        />
    <View
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="2pt"
        android:background="@color/colorAccent"
        android:id="@+id/th_line"
        />



    <TextView
        android:id="@+id/aud_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audiences"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        />
    <View
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="1pt"
        android:background="@color/colorAccent"
        android:id="@+id/th_line3"
        android:layout_marginBottom="15dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerViewAudience"
        android:orientation="horizontal"
        android:overScrollMode="never"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerViewLessons"
        android:orientation="horizontal"
        android:overScrollMode="never"
        >
    </androidx.recyclerview.widget.RecyclerView>


    <TextView
        android:id="@+id/title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info about conference halls coming soon!"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:layout_margin="25dp"
        />


</LinearLayout>


</FrameLayout>