<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/teachers_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:layout_gravity="center"
            android:textSize="32sp"
            android:layout_margin="10dp"
            />
        <View
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="2pt"
            android:background="@color/colorAccent"
            android:id="@+id/th_line"
            />

        <TextView
            android:id="@+id/floors_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Floor"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_margin="10dp"
            />
        <View
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="1pt"
            android:background="@color/colorAccent"
            android:id="@+id/th_line2"
            />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerViewFloor"
        android:orientation="horizontal"
        android:overScrollMode="never">
    </androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:id="@+id/aud_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audiences"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_margin="10dp"
            />
        <View
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="1pt"
            android:background="@color/colorAccent"
            android:id="@+id/th_line3"
            />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerViewAudience"
        android:orientation="horizontal"
        android:overScrollMode="never"
        >
    </androidx.recyclerview.widget.RecyclerView>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/recyclerViewLessons"
        android:orientation="vertical"
        android:overScrollMode="never"
        >
    </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <TextView
        android:layout_gravity="end|center_vertical"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:id="@+id/day_of_week_selector"
        android:gravity="center"
        android:textColor="#000"
        android:layout_marginBottom="-100dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/ellipse_audience"
        android:layout_marginRight="21dp"
        android:visibility="invisible"
        />
</FrameLayout>